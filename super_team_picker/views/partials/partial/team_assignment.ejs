<div class="border my-3"></div>
<div class="from-group px-3">
  <form action="/cohorts/<%- cohort.id %>" method="get">
    <label>Method</label>

    <div class="form-check">
      <input class="form-check-input" type="radio" name="method"
      value="TeamCount" <% if (method && method == "TeamCount" ) { %> checked <%
      } %> />
      <label class="form-check-label" for="TeamCount"> Team Count </label>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="radio" name="method"
      value="NumberPerTeam" <% if (method && method == "NumberPerTeam" ) { %>
      checked <% } %> />
      <label class="form-check-label" for="NumberPerTeam">
        Number Per Team
      </label>
    </div>
    <div class="form-group mt-3">
      <label for="quantity">Quantity</label>
      <input
        type="number"
        class="form-control"
        name="quantity"
        <% if(quantity){ %>
      value="<%- quantity %>" <% } %> />
      <button class="form-control mt-3 btn btn-outline-primary">
        Assign Teams
      </button>
    </div>
  </form>
</div>
<% if (teams.length > 0) { %>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Members</th>
      </tr>
    </thead>
    <tbody>
      <% teams.forEach((team, index) => { %>
      <tr>
        <th scope="row"><%- index + 1 %></th>
        <td><%- team %></td>
      </tr>
      <% }) %>
    </tbody>
  </table>
  
<% } %> 
